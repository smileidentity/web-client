{
	"name": "@smile_identity/web-page",
	"version": "1.0.0",
	"description": "Self Hosted Integration for Smile Identity on the Web",
	"main": "inline.js",
	"scripts": {
		"build:dist": "esbuild src/js/*.js --bundle --minify --outdir=dist/js && npm run postbuild:dist",
		"build": "npm run instrument && npm run copy && npm run esbuild",
		"clean": "rm -rf build dist",
		"copy": "cp -r src/* build && cp cypress/pages/*.html build",
		"copy:dist": "cp -r src/* dist",
		"esbuild": "esbuild src/js/*.js --bundle --minify --outdir=build/js",
		"instrument": "nyc instrument src build",
		"postbuild:dist": "npm run copy:dist",
		"prebuild:dist": "rm -rf dist",
		"preinstrument": "npm run clean",
		"prestart": "npm run build && npm run build:dist",
		"start": "npx serve -p 8000 build",
		"test": "npx cypress run",
		"watch": "watch 'npm run prestart' src"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/smileidentity/hosted-web-integration.git"
	},
	"keywords": [],
	"author": "tams sokari <tams@smileidentity.com>",
	"bugs": {
		"url": "https://github.com/smileidentity/hosted-web-integration/issues"
	},
	"homepage": "https://github.com/smileidentity/hosted-web-integration#readme",
	"devDependencies": {
		"@cypress/code-coverage": "3.9.11",
		"cypress": "^12.5.1",
		"nyc": "15.1.0",
		"serve": "13.0.2",
		"terser": "5.9.0"
	},
	"dependencies": {
		"esbuild": "^0.19.4",
		"jszip": "^3.10.1",
		"validate.js": "^0.13.1"
	}
}
